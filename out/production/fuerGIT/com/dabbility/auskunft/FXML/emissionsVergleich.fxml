<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dabbility.auskunft.Controller.EmissionsVergleich">
    <center>
    <AnchorPane fx:id="anchorPane" minHeight="400.0" minWidth="600.0">

   <children>
      <TabPane prefHeight="200" prefWidth="300" fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Treibhausgase">
            <content>
              <AnchorPane minHeight="200.0" minWidth="300.0">
                     <children>
                        <BarChart fx:id="diagrammA">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Weitere Emissionen">
            <content>
              <AnchorPane minHeight="200.0" minWidth="300.0">
                     <children>
                        <BarChart fx:id="diagrammB">
                           <xAxis>
                              <CategoryAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </BarChart>
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
    </center>
   <bottom>
<Label fx:id="lblQuelle" minHeight="75.0" prefWidth="545.0" wrapText="true" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
